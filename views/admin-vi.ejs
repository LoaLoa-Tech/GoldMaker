<!doctype html>
<html>
  <head>
    <title>Chỉnh sửa nội dung trang chủ</title>
    <meta charset="utf-8">
    <!-- include libraries(jQuery, bootstrap) -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <!-- include summernote css/js -->
 
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
  </head>
  <body>

    <form method="post" action="/admin-vi">
    <%
          for(let i = 1;i<=7;++i)
          {
                        %>
                        <div class="data">
              <%- include(`vi/${i}.html`)%>
              </div>

            <textarea name="<%=i%>"> 
              </textarea>
    <%
          }
    %>
    <button type="submit">Update</button>
    </form>

    <!-- generates editors-->
    <script> 
      const areas = $("textarea");
      const data = $(".data");
      for(let i = 0; i<data.length; ++i)
      {
        let content = data[i].innerHTML;// gets content
        let editor = $(areas).eq(i).summernote("code",content);// creates editor
        data.eq(i).remove();// deletes data holder element 
      }

      </script>
  </body>
</html>
